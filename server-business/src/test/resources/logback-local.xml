<included>
    <property name="LOG_DIR" value="./build/logs"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                <![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-40logger{40}\tmessage:%replace(%msg){'(\r\n|\r|\n)','$1  '}%n%replace(%replace(%xEx){'(\r\n|\r|\n)','$1  '}){'  $',''}%nopex]]></pattern> <!-- (2) -->
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="com.undecided.projectTemplate">
        <level value="debug"/>
    </logger>

    <logger name="com.undecided.projectTemplate.shared">
        <level value="trace"/>
    </logger>

    <logger name="com.undecided.gfw.web.token.transaction">
        <level value="info"/>
    </logger>
    <logger name="com.undecided.gfw.common.exception.ExceptionLogger">
        <level value="info"/>
    </logger>

    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <root level="warn"> <!-- (11) -->
        <appender-ref ref="STDOUT"/> <!-- (12) -->
    </root>

</included>
