<included>
    <property name="LOG_DIR" value="./build/logs"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> <!-- (1) -->
        <encoder>
            <pattern>
                <![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-40logger{40}\tmessage:%replace(%msg){'(\r\n|\r|\n)','$1  '}%n%replace(%replace(%xEx){'(\r\n|\r|\n)','$1  '}){'  $',''}%nopex]]></pattern> <!-- (2) -->
        </encoder>
    </appender>

    <appender name="APPLICATION_LOG_FILE"
      class="ch.qos.logback.core.rolling.RollingFileAppender"> <!-- (3) -->
        <file>${LOG_DIR}/TemplateApplication.log</file> <!-- (4) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_DIR}/TemplateApplication-%d{yyyy-MM-dd}.zip
            </fileNamePattern> <!-- (5) -->
            <maxHistory>7</maxHistory> <!-- (6) -->
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset> <!-- (7) -->
            <pattern>
                <![CDATA[date:%d{yyyy-MM-dd HH:mm:ss}\tX-Track:%X{X-Track}\tlevel:%-5level\tlogger:%-40logger{40}\tmessage:%replace(%msg){'(\r\n|\r|\n)','$1  '}%n%replace(%replace(%xEx){'(\r\n|\r|\n)','$1  '}){'  $',''}%nopex]]></pattern>
        </encoder>
    </appender>

    <!-- Application Loggers -->
    <logger name="org.venusPj.projectTemplate"> <!-- (9) -->
        <level value="info"/>
    </logger>

    <logger name="org.venusPj.projectTemplate.shared"> <!-- (9) -->
        <level value="trace"/>
    </logger>

    <logger name="org.venusPj.gfw.web.logging.HttpSessionEventLoggingListener"> <!-- (9) -->
        <level value="trace"/>
    </logger>
    <logger name="org.venusPj.gfw.web.logging.TraceLoggingInterceptor"> <!-- (9) -->
        <level value="trace"/>
    </logger>
    <logger name="org.venusPj.gfw.web.token.transaction"> <!-- (9) -->
        <level value="info"/>
    </logger>
    <logger name="org.venusPj.gfw.common.exception.ExceptionLogger"> <!-- (9) -->
        <level value="info"/>
    </logger>

    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <!--logger name="org.springframework.web.servlet">
        <level value="info"/>
    </logger -->
    <root level="warn"> <!-- (11) -->
        <appender-ref ref="STDOUT"/> <!-- (12) -->
        <appender-ref ref="APPLICATION_LOG_FILE"/>
    </root>

</included>
